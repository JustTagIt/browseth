{
  "name": "browseth",
  "private": true,
  "version": "0.0.0-aplha.1",
  "main": "out/index.js",
  "types": "./out/index.d.ts",
  "license": "MIT",
  "scripts": {
    "test": "jest --watch",
    "test:once": "jest",
    "build": "rollup -c",
    "lint": "tslint -p .",
    "format": "prettier src/**/*.ts",
    "prepublish": "exit; yarn lint && yarn format"
  },
  "dependencies": {
    "@ledgerhq/hw-app-eth": "^4.2.0",
    "@ledgerhq/hw-transport-node-hid": "^4.2.0",
    "@ledgerhq/hw-transport-u2f": "^4.2.0",
    "core-js": "^2.5.3",
    "eccrypto": "^1.0.3",
    "ethereumjs-abi": "^0.6.5",
    "ethereumjs-tx": "^1.3.3",
    "js-sha3": "^0.7.0",
    "web3-eth-abi": "^1.0.0-beta.30"
  },
  "devDependencies": {
    "@types/core-js": "^0.9.46",
    "@types/jest": "^22.1.1",
    "@types/node": "^9.4.2",
    "builtin-modules": "^2.0.0",
    "chalk": "^2.3.2",
    "jest": "^22.4.3",
    "lerna": "^2.9.0",
    "prettier": "^1.10.2",
    "rollup": "^0.56.5",
    "rollup-analyzer-plugin": "^1.1.1",
    "rollup-plugin-commonjs": "^9.0.0",
    "rollup-plugin-json": "^2.3.0",
    "rollup-plugin-node-resolve": "^3.2.0",
    "rollup-plugin-typescript2": "^0.12.0",
    "ts-jest": "^22.0.3",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.9.0",
    "tslint-eslint-rules": "^4.1.1",
    "tslint-immutable": "^4.5.1",
    "typescript": "^2.7.1",
    "typestrict": "^0.0.7"
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/**/__tests__/**/*.ts",
      "<rootDir>/**/?(*.)(spec|test).ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "node"
    ]
  },
  "prettier": {
    "bracketSpacing": true,
    "proseWrap": "always",
    "singleQuote": true,
    "trailingComma": "all"
  },
  "resolutions": {
    "js-sha3": "0.3.1",
    "secp256k1": "2.0.10",
    "bn.js": "4.11.8"
  }
}
