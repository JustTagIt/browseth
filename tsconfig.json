{
  "compilerOptions": {
    "downlevelIteration": true,
    "preserveConstEnums": true,
    "diagnostics": true,
    "strict": true,
    "noErrorTruncation": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "removeComments": true, // TODO(bp): FIND OUT MORE
    "forceConsistentCasingInFileNames": true,
    "target": "es5",
    // "module": "commonjs",
    "baseUrl": ".",
    "rootDir": ".",
    "declaration": true,
    "lib": ["dom", "es7", "dom.iterable"],
    "paths": {
      "*": ["node_modules/@types/*", "types/*", "src/*"]
    }
  },
  "include": ["**/node_modules/@types", "types", "src"],
  "exclude": ["**/__tests__", "**/*.test.ts", "**/test.ts"]
}
